@model IEnumerable<MvcBlogSitesi.Models.Makale>

<h6 style="color: darkblue;">En Çok Okunan Makaleler</h6>
@foreach (var item in Model)
{


    <div class="card mb-3" style="max-width: 420px;">
        <div class="row g-0">
            <div class="col-md-4">
                <a href="/Home/Detay/@item.Id"><img src="~/Content/Images/@item.Resim" class="img-fluid rounded-start" alt="..."></a>
            </div>
            <div class="col-md-8">
                <div class="card-body">

                    <p class="card-text" style="font-size:14px">@item.Baslik</p>

                </div>
            </div>
            <div class="card-footer">
                <small class="text-muted"><i class="bi bi-clock" style="font-size: 20px;"></i> @item.YayinTarihi.ToString("dd-mm-yyyy") - <i class="bi bi-eye" style="font-size: 20px;"></i> @item.Goruntulenme Görüntüleme   </small>
            </div>
        </div>
    </div>
}

